% Adds pdf features and appearance-related macros.

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{wfs-pdf}[2019/04/24 v1.0]

\RequirePackage{doi}
\RequirePackage[x11names]{xcolor}
\RequirePackage{hyperref}
\hypersetup{
	colorlinks=true,
	% internal links
	linkcolor=Green4,
	citecolor=Green4,
	% external links
	urlcolor=Blue4
}
\RequirePackage[ocgcolorlinks]{ocgx2}

\RequirePackage{graphicx}
\graphicspath{{./graphics/}}
\RequirePackage{media9} % flash media
\addmediapath{./media/}

% page skipping
\RequirePackage{etoolbox}
\newcommand*\skippage[1][\@nil]{
	\newpage\null%
	\ifblank{#1}{}{\thispagestyle{#1}}%
	\newpage%
}
