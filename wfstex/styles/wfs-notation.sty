\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{wfs-notation}[2019/04/24 v1.0]

\RequirePackage{physics} % e.g. Dirac notation
\RequirePackage[version=4]{mhchem} % chemistry formulas, orbital notation
\RequirePackage[range-units=single, range-phrase=--]{siunitx} % units

\RequirePackage{mathtools} % extends amsmath
\RequirePackage{amssymb} % e.g. set notation

\RequirePackage{dsfont} % double-stroke font (e.g. identity operator)
\RequirePackage{bm} % bold math symbols (e.g. greek letters)
\RequirePackage{nth} % 1st, 2nd, etc.

% math operators
\DeclareMathOperator{\sign}{sign}
\DeclareMathOperator{\SPAN}{span}
\DeclareMathOperator{\sinc}{sinc}

% sets
\newcommand*\naturals{\mathbb{N}}
\newcommand*\integers{\mathbb{Z}}
\newcommand*\reals   {\mathbb{R}}
\newcommand*\complex {\mathbb{C}}
\newcommand*\union   {\bigcup}
\newcommand*\intsect {\bigcap}

% products
\newcommand*\dotp    {\bm{\cdot}}
\newcommand*\crossp  {\cross}
\newcommand*\tensorp {\otimes}

% symbols
\newcommand*\kd[1]{\delta_{#1}}      % Kronecker delta
\newcommand*\lc[1]{\varepsilon_{#1}} % Levi-Civita symbol

% vectors and operators
\let\arrow\vec
\renewcommand*\vec    {\bm}
\newcommand*  \uvec[1]{\hat{\vec{#1}}} % unit vector
\newcommand*  \vop [1]{\vec{#1}}       % vector operator
\newcommand*  \hc  [1]{#1^\dag}        % Hermitian conjugate
\newcommand*\paulivec {\vop{\sigma}}   % Pauli vector
\newcommand*\pauli [1]{\sigma_{#1}}    % Pauli operator
\newcommand*\id       {\mathds{1}}     % identity operator

% QEDs
\newcommand*\openQED  {\ensuremath{\openbox}}
\newcommand*\filledQED{\ensuremath{\blacksquare}}
\newcommand*\QED      {\openQED}

% misc
\newcommand*\mean[1]{\bar{#1}}
\newcommand*\bigO{\mathcal{O}}

% english
\newcommand*\defined   {\triangleq}
\newcommand*\reprsntby {\doteq}
\newcommand*\replacedby{\rightarrow}
\newcommand*\approaches{\rightarrow}
\newcommand*\approach  {\approaches}
\newcommand*\orderof[1]{\bigO{(#1)}}
